<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping

>

    <class
            name="com.systop.common.security.user.model.Role"
            table="ROLES"
            schema="PUBLIC"
            lazy="true"
    >

    <id
        name="id"
            column="ID"
                type="java.lang.Integer"
    >

    <!-- The generator-class attribute of @hibernate.id is deprecated, use the @hibernate.generator tag instead -->
    <generator class="hilo">

    </generator>

    </id>

        <version
            name="version"
            column="VERSION"
            type="java.lang.Integer"
        />

        <property
            name="descn"
                    column="DESCN"
                length="255"
        >

        </property>

        <property
            name="name"
                    column="NAME"
                length="255"
        >

        </property>

        <set
            name="permissions"
            table="ROLE_PERMIS"
            inverse="true"
        >

            <key
                column="ROLE_ID"
                not-null="true"
            >

            </key>          

            <many-to-many
                class="com.systop.common.security.user.model.Permission"
                column="PERMISSION_ID"
             >

             </many-to-many>

        </set>

        <set
            name="users"
            table="USER_ROLE"
        >

            <key
                column="ROLE_ID"
                not-null="true"
            >

            </key>          

            <many-to-many
                class="com.systop.common.security.user.model.User"
                column="USER_ID"
             >

             </many-to-many>

        </set>

    </class>    

</hibernate-mapping>

